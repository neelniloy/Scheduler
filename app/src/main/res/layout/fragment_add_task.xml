<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddTaskFragment">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:layout_marginStart="20dp"
            android:id="@+id/tv_select_time"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tv_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Set Time :"
                android:textColor="@color/colorBlack"
                android:textSize="15.5sp"/>

            <Button
                android:id="@+id/cv_time"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Select"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:background="@drawable/custom_button_bg2"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginStart="20sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_select_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:id="@+id/select_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Set Date :"
                android:textColor="@color/colorBlack"
                android:textSize="15.5sp"/>

            <Button
                android:id="@+id/cv_select_date"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Select"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:background="@drawable/custom_button_bg2"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginHorizontal="20dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="clear_text"
            android:layout_marginBottom="15dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextDetailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Details"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginHorizontal="20dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_detail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="none"
                android:gravity="left" />

        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/btn_add_task"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Add Task"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:background="@drawable/custom_button_bg2"
            android:textAllCaps="false"
            android:layout_gravity="center"
            />



    </LinearLayout>


</RelativeLayout>